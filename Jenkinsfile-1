pipeline {
  agent {
    docker { image 'node:16-alpine' 
             args '-u root' 
    }
  }
  environment {
        HOME = '.'
    }
  stages {
    stage('Test') {
      steps {
        sh 'node --version'
        sh 'npm -v' 
        sh 'ls -lart' 
        sh 'npm install --cache npm_cache'
        sh 'npm audit fix --force'
        sh 'apk add --no-cache tar'
        sh 'tar czf cvcrator-$BUILD_NUMBER.tar.gz node_modules main.js package.json index.js public'
      }
    }
  }
  post { 
        always { 
            sh 'Tar czf cvcrator-$BUILD_NUMBER.tar.gz node_modules main.js package.json index.js public' 
            cleanWs()
        }
    }
    
}
